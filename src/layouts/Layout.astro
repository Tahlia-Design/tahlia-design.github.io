---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Tahlia Design Website" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/logos/favicon.svg" />
    <title>{title}</title>
    <style>
      html, body {
        height: 100%;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang="scss">
  @use 'webcoreui/styles' as *;
  @include setup((
      // fontRegular: '/fonts/Inter-Regular.woff2',
      // fontBold: '/fonts/Inter-Bold.woff2'
  ));
</style>
